<odoo>
  <data>
  
    <template id="external_layout_header_inherit_cr" 
            inherit_id="web.external_layout_standard">
            <xpath expr="//div[@class='header']" position="replace">
                <div class="header">
                      <img t-att-src="'/ufp_changes/static/img/header.png'" width="100%" />
                </div>
            </xpath>
        </template>
        <template id="external_layout_footer_inherit_cr" 
            inherit_id="web.external_layout_standard">
            <xpath expr="/div[2]" position="replace">
                <div class="footer">
                   <img t-att-src="'/ufp_changes/static/img/footer.PNG'" width="100%"/>
                </div>
            </xpath>
        </template>
  </data>
</odoo>